<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/frag_insert_medication"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/frameAlarmTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/TextViewLabel"
                    android:text="@string/label_alarm" />

                <TextView
                    tools:text="Dorflex"
                    android:id="@+id/tvMedContentAlarmTime"
                    style="@style/MedTextViewContent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frameTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:text="@string/label_total_amount"
                    style="@style/TextViewLabel" />

                <TextView
                    tools:text="100"
                    android:id="@+id/tvMedContentTotalAmount"
                    style="@style/MedTextViewContent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frameAlarmAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:minHeight="60dp"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/TextViewLabel"
                    android:text="@string/label_amount_per_alarm" />

                <TextView
                    tools:text="1"
                    android:id="@+id/tvMedContentAlarmAmount"
                    style="@style/MedTextViewContent" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
