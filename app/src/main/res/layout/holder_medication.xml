<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:id="@+id/frameHolderMedicationAlarmDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tvHolderMedicationAlarmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="---"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="11/10/2018" />

            <TextView
                android:id="@+id/tvHolderMedicationAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="---"
                android:textColor="@color/light_blue_500"
                android:textSize="32sp"
                tools:text="15:30" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/frameHolderMedicationAlarmDateTime"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHolderMedicationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="---"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp"
                tools:text="Dorflex" />

            <TextView
                android:id="@+id/tvHolderMedicationMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="---"
                android:textColor="@color/blue_grey_300"
                android:textSize="14sp"
                tools:text="1 comprimido" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>