<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <FrameLayout
            android:id="@+id/frameHolderMedicationAlarmDateTime"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHolderMedicationAlarmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="11/10/2018"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHolderMedicationAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="HH:mm"
                android:textColor="@color/light_blue_500"
                android:textSize="32sp" />

        </FrameLayout>



        <LinearLayout
            android:layout_toLeftOf="@id/frameHolderMedicationAlarmDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHolderMedicationName"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Medication"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvHolderMedicationMsg"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1 pill"
                android:textColor="@color/blue_grey_300"
                android:textSize="14sp" />

            </LinearLayout>

    </RelativeLayout>

</LinearLayout>